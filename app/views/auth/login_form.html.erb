<div class="row">

  <div class="col-md-8">
    <%= form_tag authenticate_path, class: "form" do %>
      <legend>Login</legend>

      <div class="form-group">
        <label for="credentials[email]">Email</label>
        <input type="email" name="credentials[email]" class="form-control">
      </div>
      
      <div class="form-group">
        <label for="credentials[password]">Password</label>
        <input type="password" name="credentials[password]" class="form-control">
      </div>

      <button type="submit" class="btn btn-primary">Login</button>
    <% end %>
  </div>

  <div class="col-md-4 hidden-xs">
    <img src="/assets/man_yelling.small.png">
  </div>

</div>